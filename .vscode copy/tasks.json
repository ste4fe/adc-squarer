{
    "version": "2.0.0",

    "tasks": [
        
        {
            "type": "cmake",
            "label": "cmake: build debug",
            "command": "build",
            "detail": "Build project with CMake",
            "group": "build"
        },
        {
            "type": "cmake",
            "label": "cmake: build release",
            "command": "build",
            "detail": "Build project with CMake on release",
            "group": "build",
            "dependsOn":[
                "cmake: clean",
                "cmake: configure"
            ],
        },

        {
            "type": "cmake",
            "label": "cmake: clean",
            "command": "clean",
            "detail": "Clean build dir",
            "group": "build"
        },

        {
            "type": "cmake",
            "label": "cmake: configure",
            "command": "configure",
            "detail": "Configure CMake project",
        },

        {
            "type": "shell",
            "label": "openocd: flash",
            "detail": "Programming the mcu flash",
            "command": "openocd",
            "args": [
                "-f",
                "./apm32f1x.cfg",
                "-c program ./build/${workspaceFolderBasename}.hex verify reset exit",
            ],
            "dependsOn": "cmake: build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "openocd: erase",
            "detail": "Erase full chip",
            "command": "openocd",
            "args": [
                "-c \"",
                "reset halt; flash erase_sector 0 0 last; reset init",
                "\""
            ]
        }
    ]
}